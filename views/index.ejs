<%- include('./partials/header') %>

     <% if (error.length > 0) { %> 
          <div class="absolute w-fit top-10 left-1/2 -translate-x-52 -translate-y-1/2 bg-yellow-100 text-zinc-700 px-3 py-2 rounded-md border-3 border-transparent border-b-red-500 flash z-20">
                         <span> <%= error %></span>
          </div>
     <% } %>

     <div class="container flex items-center justify-around gap-10 w-full min-h-screen bg-linear-to-tr from-green-900 to-yellow-600">
          <div class="register w-1/4">
               <h1 class="text-4xl mb-8">Welcome to <span class="text-blue-300">Scatch</span></h1>
               <h4 class="text-2xl text-zinc-800 font-semibold mb-3 pl-2">Create your account</h4>
               <form class="flex flex-col items-start w-full gap-4 pl-6" action="/users/register" method="post">
                    <input class="w-full bg-yellow-100 px-3 py-2 rounded-md outline-blue-400 shadow-[0px_0px_8px_black]" type="text" name="fullname" placeholder="Full name" required>
                    <input class="w-full bg-yellow-100 px-3 py-2 rounded-md outline-blue-400 shadow-[0px_0px_8px_black]" type="email" name="email" placeholder="email" required>
                    <input class="w-full bg-yellow-100 px-3 py-2 rounded-md outline-blue-400 shadow-[0px_0px_8px_black]" type="password" name="password" placeholder="password" required>
                    <input class="w-fit bg-blue-500 px-5 py-2 rounded-full border-none cursor-pointer shadow-[0px_0px_8px_pink] hover:shadow-[0px_0px_8px_white] hover:font-semibold hover:text-blue-600 hover:bg-zinc-900" type="submit" value="Create account">
               </form>
          </div>
          <div class="login md:w-1/4 w-2/4">
               <h4 class="text-2xl text-zinc-800 font-semibold mb-3">Login your account</h4>
               <form class="flex flex-col items-start w-full gap-4 pl-6" action="/users/login" method="post">
                    <input class="w-full bg-yellow-100 px-3 py-2 rounded-md outline-blue-400 shadow-[0px_0px_8px_black]" type="email" name="email" placeholder="email" required>
                    <input class="w-full bg-yellow-100 px-3 py-2 rounded-md outline-blue-400 shadow-[0px_0px_8px_black]" type="password" name="password" placeholder="password" required>
                    <input class="w-fit bg-blue-500 px-5 py-2 rounded-full border-none cursor-pointer shadow-[0px_0px_8px_pink] hover:shadow-[0px_0px_8px_white] hover:font-semibold hover:text-blue-600 hover:bg-zinc-900" type="submit" value="Login">
               </form>
          </div>
     </div>



<%- include('./partials/footer') %>